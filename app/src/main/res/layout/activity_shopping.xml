<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".shopping">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:logo="@drawable/ic_launcher_foreground"
            app:title="Buy and Sell" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="2"
            android:rowCount="10">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/phone1"
                android:layout_row="0"
                android:layout_column="0"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="White Phone"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="30dp" />

            <RatingBar
                android:id="@+id/ratingBar1"
                android:layout_width="198dp"
                android:layout_height="44dp"
                android:layout_row="2"
                android:layout_column="0"
                android:numStars="5"
                android:scaleX="0.7"
                android:scaleY="0.7" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:textSize="20dp"
                android:text="Rate it!" />


            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/phone2"
                android:layout_row="0"
                android:layout_column="1" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:text="Black Phone"
                android:textSize="30dp" />

            <RatingBar
                android:id="@+id/ratingBar2"
                android:layout_width="229dp"
                android:layout_height="42dp"
                android:layout_row="2"
                android:layout_column="1"
                android:numStars="5"
                android:scaleX="0.7"
                android:scaleY="0.7" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:textSize="20dp"
                android:text="Rate it!" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/phone3"
                android:layout_row="4"
                android:layout_column="0" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:text="Gray Phone"
                android:textSize="30dp" />

            <RatingBar
                android:id="@+id/ratingBar3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="0"
                android:numStars="5"
                android:scaleX="0.7"
                android:scaleY="0.7" />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="0"
                android:textSize="20dp"
                android:text="Rate it!" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/phone4"
                android:layout_row="4"
                android:layout_column="1" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="1"
                android:text="Light Blue Phone"
                android:textSize="30dp" />

            <RatingBar
                android:id="@+id/ratingBar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="1"
                android:numStars="5"
                android:scaleX="0.7"
                android:scaleY="0.7" />
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="1"
                android:textSize="20dp"
                android:text="Rate it!" />




        </GridLayout>
    </ScrollView>
</LinearLayout>